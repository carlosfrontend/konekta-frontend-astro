---
interface Props {
  firstWord: string;
  secondWord: string;
  path: string;
}
const { firstWord, secondWord, path } = Astro.props;
---

<div>
  <a href={path} class='text-lg font-headings font-bold'>
    <span
      class='bg-linear-to-r from-amber-500 to-orange-500 bg-clip-text text-transparent font-bold'
      >{firstWord}</span
    >
    <span
      class='bg-linear-to-r from-amber-300 to-red-300 bg-clip-text text-transparent font-bold'
      >{secondWord}</span
    ></a
  >
</div>
