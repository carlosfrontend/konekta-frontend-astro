---
import type { Speaker } from '../types';
import { Image } from 'astro:assets';

interface Props {
  speaker: Speaker;
}
const { speaker } = Astro.props;
---

<div
  class='bg-amber-300/80 rounded-lg shadow-xl p-6 text-center transform hover:scale-105 transition duration-300 ease-in-out border border-white'
>
  <Image
    src={speaker.image}
    alt={`Foto de ${speaker.name}`}
    width={speaker.image.width}
    height={speaker.image.height}
    class='w-32 h-32 object-cover rounded-full mx-auto mb-4 border-4 border-black shadow-md'
    format='webp'
    quality={80}
    loading='lazy'
  />
  <h3 class='text-2xl font-bold mb-2 text-black'>{speaker.name}</h3>
  <p class='text-black/80 text-lg'>{speaker.position}</p>
</div>
