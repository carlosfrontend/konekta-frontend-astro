---
import { registrationHeading } from '../data/headings';
import HeadingOfSection from './HeadingOfSection.astro';
---

<section
  id='tickets'
  class='sm:py-20 bg-stone-950 text-white scroll-mt-16 sm:scroll-mt-14 md:scroll-mt-24 snap-start'
>
  <div class='max-w-xl mx-auto px-4 sm:px-6 lg:px-8 text-center'>
    <div class='flex justify-center items-center h-auto py-10'>
      <HeadingOfSection heading={registrationHeading} />
    </div>

    <p class='text-lg sm:text-xl text-white/80 mb-10'>
      Completa el formulario para asegurar tu plaza en la Konekta Frontend
      Conference y recibe toda la información.
    </p>

    <div
      class='bg-neutral-900 rounded-lg shadow-xl p-8 border border-amber-600'
    >
      <form id='registrationForm' class='space-y-6'>
        <div>
          <label
            for='name'
            class='block text-left text-lg font-medium text-white mb-2'
            >Nombre Completo</label
          >
          <input
            type='text'
            id='name'
            name='name'
            autocomplete='name'
            required
            class='mt-1 block w-full px-4 py-2 bg-neutral-800 border border-neutral-700 rounded-md text-white placeholder-neutral-500 focus:ring-amber-500 focus:border-amber-500'
            placeholder='Tu nombre'
          />
        </div>
        <div>
          <label
            for='email'
            class='block text-left text-lg font-medium text-white mb-2'
            >Correo Electrónico</label
          >
          <input
            type='email'
            id='email'
            name='email'
            autocomplete='email'
            required
            class='mt-1 block w-full px-4 py-2 bg-neutral-800 border border-neutral-700 rounded-md text-white placeholder-neutral-500 focus:ring-amber-500 focus:border-amber-500'
            placeholder='tu.email@ejemplo.com'
          />
        </div>

        <button
          type='submit'
          class='w-full text-lg md:text-xl font-bold text-black/80 bg-amber-500 px-8 py-3 rounded-md transition-transform transform hover:scale-105 shadow-lg cursor-pointer'
        >
          REGISTRARME
        </button>
      </form>

      <div
        id='formErrorMessage'
        class='mt-6 text-center text-lg font-semibold text-red-500 hidden'
      >
      </div>
    </div>
  </div>
</section>

<div
  id='successModal'
  class='fixed inset-0 bg-black bg-opacity-75 items-center justify-center z-50 hidden'
>
  <div
    class='bg-neutral-800 p-8 rounded-lg shadow-2xl max-w-sm w-full text-center border border-amber-600'
  >
    <h3 class='text-white text-2xl font-bold mb-4'>¡Genial!</h3>
    <p id='modalMessage' class='text-white text-lg mb-6'></p>
    <button
      id='closeModalButton'
      class='bg-amber-500 text-black px-6 py-2 rounded-md hover:bg-amber-600 transition-colors'
    >
      Cerrar
    </button>
  </div>
</div>

<script>
  const form = document.getElementById(
    'registrationForm'
  ) as HTMLFormElement | null;
  const formErrorMessage = document.getElementById('formErrorMessage');
  const successModal = document.getElementById('successModal');
  const modalMessage = document.getElementById('modalMessage');
  const closeModalButton = document.getElementById('closeModalButton');

  function showModal(message: string) {
    if (successModal && modalMessage) {
      modalMessage.textContent = message;
      successModal.classList.add('flex');
      successModal.classList.remove('hidden');
    }
  }

  function hideModal() {
    if (successModal) {
      successModal.classList.remove('flex');
      successModal.classList.add('hidden');
    }
  }

  if (closeModalButton) {
    closeModalButton.addEventListener('click', hideModal);
  }
  if (successModal) {
    successModal.addEventListener('click', (event) => {
      if (event.target === successModal) {
        hideModal();
      }
    });
  }

  if (form && formErrorMessage) {
    form.addEventListener('submit', async (event) => {
      event.preventDefault();

      formErrorMessage.classList.add('hidden');
      formErrorMessage.textContent = '';

      const nameInput = document.getElementById('name') as HTMLInputElement;
      const emailInput = document.getElementById('email') as HTMLInputElement;

      const name = nameInput.value.trim();
      const email = emailInput.value.trim();

      if (!name || !email) {
        formErrorMessage.textContent = 'Por favor, rellena todos los campos.';
        formErrorMessage.classList.remove('hidden');
        return;
      }
      if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
        formErrorMessage.textContent =
          'Por favor, introduce un correo electrónico válido.';
        formErrorMessage.classList.remove('hidden');
        return;
      }

      showModal(
        '¡Te has registrado perfectamente! Esto es solo una demostración de la funcionalidad. Gracias por tu participación. Los datos realmente no se enviaran.'
      );
    });
  }
</script>
